@model TiendaMasVeloz.BLL.DTOs.FacturaDTO

@{
    ViewData["Title"] = "Editar Venta";
}

<div class="container mt-4">
    <h2>Editar Venta</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="IdFactura" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="NumeroFactura" class="control-label">NÃºmero de Factura</label>
                    <input asp-for="NumeroFactura" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="control-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdCliente" class="control-label">Cliente</label>
                    <select asp-for="IdCliente" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "NombreCompleto"))">
                        <option value="">-- Seleccione un Cliente --</option>
                    </select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Total" class="control-label">Total</label>
                    <input asp-for="Total" class="form-control" readonly />
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 