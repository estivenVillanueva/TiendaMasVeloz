@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-primary bg-gradient text-white">
        <div class="col-md-8 p-lg-5 mx-auto my-5">
            <h1 class="display-4 fw-bold">TiendaMasVeloz</h1>
            <p class="lead fw-normal">Sistema de gestión integral para tu negocio</p>
            <div class="d-flex gap-3 justify-content-center lead fw-normal">
                <a href="/Ventas/NuevaVenta" class="btn btn-outline-light btn-lg px-4">
                    <i class="fas fa-shopping-cart me-2"></i>Nueva Venta
                </a>
                <a href="/Productos" class="btn btn-light btn-lg px-4">
                    <i class="fas fa-box me-2"></i>Gestionar Productos
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container px-4 py-5">
        <h2 class="pb-2 border-bottom">Características Principales</h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            <div class="col d-flex align-items-start">
                <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                    <i class="fas fa-chart-line text-primary"></i>
                </div>
                <div>
                    <h3 class="fs-2">Ventas</h3>
                    <p>Gestiona tus ventas de manera eficiente. Registra ventas, genera facturas y mantén un control detallado de tus transacciones.</p>
                    <a href="/Ventas" class="btn btn-primary">
                        Ver Ventas
                    </a>
                </div>
            </div>
            <div class="col d-flex align-items-start">
                <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                    <i class="fas fa-box-open text-primary"></i>
                </div>
                <div>
                    <h3 class="fs-2">Inventario</h3>
                    <p>Control total de tu inventario. Gestiona productos, categorías y mantén niveles óptimos de stock.</p>
                    <a href="/Productos" class="btn btn-primary">
                        Ver Productos
                    </a>
                </div>
            </div>
            <div class="col d-flex align-items-start">
                <div class="icon-square text-bg-light d-inline-flex align-items-center justify-content-center fs-4 flex-shrink-0 me-3">
                    <i class="fas fa-tags text-primary"></i>
                </div>
                <div>
                    <h3 class="fs-2">Categorías</h3>
                    <p>Organiza tus productos en categorías. Facilita la búsqueda y gestión de tu inventario de manera eficiente.</p>
                    <a href="/Categorias" class="btn btn-primary">
                        Ver Categorías
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
