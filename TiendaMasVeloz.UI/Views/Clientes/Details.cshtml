@model TiendaMasVeloz.BLL.DTOs.ClienteDTO

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container-fluid">
    <h1 class="mt-4">Detalles del Cliente</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            Informaci√≥n del Cliente
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CedulaNit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CedulaNit)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Incentivos)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Incentivos)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Activo)</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Activo ? "success" : "danger")">
                        @(Model.Activo ? "Activo" : "Inactivo")
                    </span>
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div> 