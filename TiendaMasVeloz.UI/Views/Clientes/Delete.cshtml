@model TiendaMasVeloz.BLL.DTOs.ClienteDTO

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container-fluid">
    <h1 class="mt-4">Eliminar Cliente</h1>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            ¿Está seguro de que desea eliminar este cliente?
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CedulaNit)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CedulaNit)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Activo)</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Activo ? "success" : "danger")">
                        @(Model.Activo ? "Activo" : "Inactivo")
                    </span>
                </dd>
            </dl>

            <div class="alert alert-warning mt-4">
                <i class="fas fa-exclamation-circle"></i>
                Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a este cliente.
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </form>
        </div>
    </div>
</div> 