@model TiendaMasVeloz.BLL.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container-fluid">
    <h1 class="mt-4">Detalles del Usuario</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            Información del Usuario
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Correo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rol)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>

                <dt class="col-sm-3">Fecha de Creación</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>

                <dt class="col-sm-3">Última Modificación</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaModificacion)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div> 