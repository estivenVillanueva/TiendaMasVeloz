@model TiendaMasVeloz.BLL.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container-fluid">
    <h1 class="mt-4">Eliminar Usuario</h1>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            ¿Está seguro de que desea eliminar este usuario?
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreUsuario)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreUsuario)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rol)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rol)</dd>

                <dt class="col-sm-3">Fecha de Creación</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            </dl>

            <div class="alert alert-warning mt-4">
                <i class="fas fa-exclamation-circle"></i>
                Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a este usuario.
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdUsuario" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </form>
        </div>
    </div>
</div> 