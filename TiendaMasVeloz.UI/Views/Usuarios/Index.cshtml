@model IEnumerable<TiendaMasVeloz.BLL.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container-fluid">
    <h1 class="mt-4">Usuarios</h1>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Crear Nuevo Usuario
            </a>
            <a asp-controller="Empleados" asp-action="Create" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Registrar Empleado
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Lista de Usuarios
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Correo)</th>
                        <th>@Html.DisplayNameFor(model => model.Rol)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-users me-1"></i>
            Lista de Empleados
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Cargo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empleado in ViewBag.Empleados)
                    {
                        <tr>
                            <td>@empleado.Cedula</td>
                            <td>@empleado.Nombre</td>
                            <td>@empleado.Apellido</td>
                            <td>@empleado.Email</td>
                            <td>@empleado.Telefono</td>
                            <td>@empleado.Cargo</td>
                            <td>
                                <a asp-controller="Empleados" asp-action="Edit" asp-route-id="@empleado.IdEmpleado" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-controller="Empleados" asp-action="Details" asp-route-id="@empleado.IdEmpleado" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Detalles
                                </a>
                                <a asp-controller="Empleados" asp-action="Delete" asp-route-id="@empleado.IdEmpleado" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });
    </script>
} 